<?xml version="1.0" encoding="UTF-8"?>
<!-- 
configuration.xml => studentMapper.xml => StudentMapper.java
=> Controller에 클래스Mapper(StudentMapper) 연결해서 불러오기
 -->
<!DOCTYPE configuration
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd"> 
<configuration>
	<properties resource="student/mybatis/db.properties"/>
	
	<typeAliases>
		<typeAlias type="student.dto.StudentDTO" alias="studentDTO"/>
	</typeAliases>
	
	<environments default="development">
	 	<environment id="development">
	 		<transactionManager type="JDBC"/>
	 		<dataSource type="POOLED">
				 <property name="driver" value="${driver}"/>
				 <property name="url" value="${url}"/>
				 <property name="username" value="${username}"/>
				 <property name="password" value="${password}"/>
			 </dataSource>
		</environment>
 	</environments>
 	
	<mappers>
		<mapper resource="student/mybatis/studentMapper.xml"/>
 	</mappers>
</configuration>