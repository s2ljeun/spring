package member;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.springframework.validation.BindException;
import org.springframework.web.servlet.ModelAndView;
import org.springframework.web.servlet.mvc.AbstractCommandController;

import member.dao.MemberDAO;
import member.dto.MemberDTO;

public class MemberInputProAbstractCommandController extends AbstractCommandController {
	private MemberDAO memberDAO;
	
	public void setMemberDAO(MemberDAO memberDAO) {
		this.memberDAO = memberDAO;
	}
	
	@Override
	protected ModelAndView handle(HttpServletRequest arg0,
			HttpServletResponse arg1, Object arg2, BindException arg3)
			throws Exception {
		
		MemberDTO dto = (MemberDTO)arg2;
		int res = memberDAO.insertMember(dto);
		ModelAndView mav = new ModelAndView();
		
		String msg = null, url = null;
		if (res>0) {
			msg = "회원등록성공!! 로그인을 해주세요.";
			url = "list_member.do";
			mav.setViewName("forward:closeWindow.jsp");
		}else {
			msg = "회원등록실패!! 회원목록페이지로 이동합니다.";
			url = "list_member.do";
			mav.setViewName("forward:message.jsp");
			
		}
		mav.addObject("msg", msg);
		mav.addObject("url", url);
		return mav;
	}

}
